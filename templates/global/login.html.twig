{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block monTitre %}Login{% endblock %}
{% block body %}
    <div class="containerLogin w-50 mx-auto border border-info rounded p-3">
        {% if error %}
                <div class="alert alert-danger">
                    Le login et mdp ne sont pas bon.
                </div>
            {% endif %}
            <form action="{{path('login')}}" method="post" class="mx-auto">
                <div class="form-group">
                    <label>Login : </label>
                    <input type="text" required name="_email" class="form-control" value="{{lastUserName}}">
                </div>
                <div class="form-group">
                    <label>Password : </label>
                    <input type="password" required name="_password" class="form-control">
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-primary" value="Connexion">
                </div>
                
            </form>
    </div>
    <div class="containerLogin w-50 mx-auto border border-info rounded p-3 m-2 text-center">
    <h5 class="text-center">Nouvel Utilisateur ?</h5>
    <button class="btn btn-primary center-block">Cr√©ez un compte</button>

    </div>
    
    
{% endblock %}
